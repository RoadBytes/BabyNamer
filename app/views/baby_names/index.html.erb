<h1>Listing Baby Names</h1>

<table>
  <thead>
    <tr>
      <th colspan='3'>Name</th>
      <th colspan='2'>Vote Count</th>
      <% if logged_in? %>
        <th>Vote Up</th>
        <th>Vote Down</th>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @baby_names.each do |baby_name| %>
      <tr>
        <td colspan='3'><%= link_to baby_name.name, baby_name,
                                    id: "show_baby_name_#{baby_name.id}" %></td>
        <td colspan='2'><%= baby_name.vote_count %></td>

        <% if logged_in? %>
          <td>
            <%= link_to(votes_path(baby_name,
                        vote: { vote: 'true',
                                voteable_type: 'BabyName',
                                voteable_id: baby_name.id }),
                        method: 'post',
                        id: "baby_name_up_vote_#{baby_name.id}") do %>
              <p>up vote</p>
            <% end %>
          </td>
          <td>
            <%= link_to(votes_path(baby_name,
                        vote: { vote: 'false',
                                voteable_type: 'BabyName',
                                voteable_id: baby_name.id }),
                        method: 'post',
                        id: "baby_name_down_vote_#{baby_name.id}") do %>
              <p>down vote</p>
            <% end %>
          </td>
          <td><%= link_to 'Edit', edit_baby_name_path(baby_name) %></td>
          <td><%= link_to 'Destroy', baby_name,
                                     method: :delete,
                                     data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
